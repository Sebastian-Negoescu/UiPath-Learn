{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "descriptio": "Key Vault name."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for the Key Vault."
            }
        },
        "tenantId": {
            "type": "string",
            "metadata": {
                "description": "Azure Tenant ID."
            }
        },
        "adAppId": {
            "type": "string",
            "metadata": {
                "description": "Service Principal that's able to connect to the Key Vault."
            }
        },
        "secretName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Secret we are going to store."
            }
        },
        "secretValue": {
            "type": "string",
            "metadata": {
                "description": "Value for the secret we're going to store."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2018-02-14",
            "name": "[parameters('keyVaultName')]",
            "location": "[parameters('location')]",
            "properties": {
                "enabledForTemplateDeployment": true,
                "enabledForDeployment": true,
                "enabledForDiskEncryption": false,
                "accessPolicies": [
                    {
                        "objectId": "[parameters('adAppId')]",
                        "tenantId": "[parameters('tenantId')]",
                        "permissions": {
                            "keys": [
                                "get",
                                "list",
                                "update",
                                "create",
                                "import",
                                "delete",
                                "recover",
                                "backup",
                                "restore"
                            ],
                            "secrets": [
                                "get",
                                "list",
                                "set",
                                "backup",
                                "restore",
                                "delete",
                                "recover"
                            ],
                            "certificates": [
                                "get",
                                "list",
                                "update",
                                "create",
                                "import",
                                "delete",
                                "recover",
                                "getissuers",
                                "deleteissuers",
                                "deleteissuers",
                                "setissuers",
                                "manageissuers"
                            ]
                        }
                    }
                ],
                "tenantId": "[parameters('tenantId')]",
                "sku": {
                    "name": "standard",
                    "family": "A"
                }
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[concat(parameters('keyVaultName'), '/', parameters('secretName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
            ],
            "location": "[parameters('location')]",
            "properties": {
                "contentType": "securestring",
                "attributes": {
                    "enabled": true
                },
                "value": "[parameters('secretValue')]"
            }
        }
    ],
    "outputs": {
        "keyVaultId": {
            "type": "string",
            "value": "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
        }
    }
}